<%= link_to  "< Back", lists_path, class: "btn" %>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <%= @list.name %>
</div>

<%= link_to  "Add a new bookmark", new_list_bookmark_path(@list), class: "btn" %>
<%= link_to  "Delete this list", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn" %>


<% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <h2><%= movie.title %></h2>
      <p><%= bookmark.comment %></p>
    </div>
    <%# <%= link_to  "Delete bookmark", bookmark_path(bookmark), class: "btn" %>
  </div>
<% end %>
